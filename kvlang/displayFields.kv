## =============================================================================
## CUSTOM DisplayField LABELS
## =============================================================================
<DisplayField@Label>
    font_size: dp(self.height)
    color: utils.rgba('#c8c8c8ff')
    markup: 1

<TitleField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    size_hint_y: (13/202)

<LargeField@DisplayField>
    font_name: 'fonts/Inter-ExtraLight.ttf'
    size_hint_y: (27/202)

<MediumField@DisplayField>
    font_name: 'fonts/Inter-Light.ttf'
    size_hint_y: (18/202)

<SmallField@DisplayField>
    font_name: 'fonts/Inter-Regular.ttf'
    size_hint_y: (13/202)

<BoldField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    size_hint_y: (13/202)

<TimeDateField@DisplayField>
    font_name: 'fonts/Inter-Medium.ttf'
    size_hint_y: (18/202)

## =============================================================================
## CUSTOM MenuField, StatusField, AND StatusColumn LABELS
## =============================================================================
<MenuField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp((self.height*(13/self.height))*app.scaleFactor)
    size_hint_y: (13/202)

<StatusField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp((self.height*(13/self.height))*app.scaleFactor)

<StatusColumn@DisplayField>:
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(self.height*0.45)
    color: utils.rgba('#141414ff')
    canvas.before:
        Color:
            rgba: utils.rgba('#c8c8c8cc')
        Rectangle:
            pos: self.x + 5, self.y
            size: self.width-10, self.height

## =============================================================================
## CUSTOM PanelTitle LABELS
## =============================================================================
<PanelTitle@DisplayField>:
    font_name: 'fonts/Inter-Bold.ttf'
    size_hint: (1, 13/202)
    pos_hint: {'x': 0, 'y': 185/202}
    color: utils.rgba('#ffffffff')

## =============================================================================
## CUSTOM MultilineField LABELS
## =============================================================================
<MediumMultilineField@Label>
    font_name: 'fonts/Inter-Light.ttf'
    font_size: dp(18*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<SmallMultilineField@Label>
    font_name: 'fonts/Inter-Regular.ttf'
    font_size: dp(14*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<BoldMultilineField@Label>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(14*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<CreditsMultilineField@Label>:
    font_name: 'fonts/Inter-SemiBold.ttf'
    font_size: dp(15*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'